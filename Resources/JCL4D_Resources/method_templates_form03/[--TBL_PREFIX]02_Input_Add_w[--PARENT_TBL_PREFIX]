C_LONGINT($[--TBL_PREFIX]_id)
C_LONGINT($2;$[--PARENT_TBL_PREFIX]_id)
$[--PARENT_TBL_PREFIX]_id:=$2
C_LONGINT($dlg_ok)//システム変数OKを保持

[--TBL_PREFIX]02_DefInit 
