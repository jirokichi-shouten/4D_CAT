//初期値代入
[--TBL_PREFIX]02_InitValues 
v[--TBL_PREFIX]02_var[--TBL_PREFIX]_[--PARENT_TBL_PREFIX]_ID:=$[--PARENT_TBL_PREFIX]_id

//画面表示
$dlg_ok:=[--TBL_PREFIX]02_Display ($[--TBL_PREFIX]_id)
If ($dlg_ok#1)
	//保存はOKボタン

End if 

$1->:=$[--TBL_PREFIX]_id//IDを返す
$0:=$dlg_ok
